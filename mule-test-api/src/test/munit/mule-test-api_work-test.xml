<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:munit="http://www.mulesoft.org/schema/mule/munit"
      xmlns:munit-tools="http://www.mulesoft.org/schema/mule/munit-tools"
      xsi:schemaLocation="http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
      http://www.mulesoft.org/schema/mule/munit http://www.mulesoft.org/schema/mule/munit/current/mule-munit.xsd
      http://www.mulesoft.org/schema/mule/munit-tools http://www.mulesoft.org/schema/mule/munit-tools/current/mule-munit-tools.xsd">

    <munit:config name="mule-test-api_work-test-config"/>

    <!-- Basic smoke test to verify application starts -->
    <munit:test name="application-startup-test" description="Verifies the application can start successfully">
        <munit:execution>
            <munit-tools:assert-that expression="#[true]" is="#[MunitTools::equalTo(true)]"/>
        </munit:execution>
    </munit:test>

    <!-- Test for flow: mule-test-apiFlow -->
    <munit:test name="mule-test-apiFlow-basic-test" description="Basic test for mule-test-apiFlow flow">
        <munit:execution>
            <flow-ref name="mule-test-apiFlow"/>
        </munit:execution>
        <munit:validation>
            <munit-tools:assert-that expression="#[payload]" is="#[MunitTools::notNullValue()]"/>
        </munit:validation>
    </munit:test>

</mule>
